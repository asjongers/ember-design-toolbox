<div class="selector__block" {{action "toggleSelectUnit" unit}}>
  <!-- only show item parts if they are at least 1 character long -->
  <!-- if there is a prefix or color, show prefix -->
  {{#if (or escapedStyle unit.prefix.content)}}
    <div class="selector__blockPart selector__blockPart--prefix" style={{if escapedStyle escapedStyle ""}}>{{unit.prefix.content}}</div>
  {{/if}}

  <!-- if there is a label, show label -->
  {{#if unit.label}}
    <div class="selector__blockPart selector__blockPart--label">
      {{unit.label}}
    </div>
  {{/if}}

  {{#if unit.field}}
    {{#if unit.label}}
      <div class="selector__blockSeperator"></div>
    {{/if}}

    <div class="selector__blockPart selector__blockPart--field">{{unit.field}}</div>
  {{/if}}
</div>
