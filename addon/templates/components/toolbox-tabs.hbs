<div class="toolbox-tabs-nav">
    <div class="toolbox-tabs-nav__slide toolbox-tabs-nav__slide--left {{unless showLeftScroll "toolbox-tabs-nav__slide--hidden"}}">
      <span class="toolbox-tabs-nav__slideShadow" {{action "startScrollLeft" on="mouseEnter"}} {{action "stopScroll" on="mouseLeave"}}></span>
      <span class="toolbox-tabs-nav__slideArrow" {{action "scrollLeftOne" on="click"}}>←</span>
      <span class="toolbox-tabs-nav__slideCounter">{{leftElements}}</span>
    </div>

  <ul>
    {{#each panels as |panel|}}
      <li class="{{if panel._isSelected "selected"}}">
        <a href="#" class="toolbox-tabs-nav__link" tabindex="1" {{action "select" panel}}>{{{panel.title}}}</a>
        {{#if panel._isSelected}}
          <span class="toolbox-tabs-nav__linkBar" style="width: 100%;"></span>
        {{/if}}
      </li>
    {{/each}}

  </ul>

    <div class="toolbox-tabs-nav__slide toolbox-tabs-nav__slide--right {{unless showRightScroll "toolbox-tabs-nav__slide--hidden"}}">
      <span class="toolbox-tabs-nav__slideShadow" {{action "startScrollRight" on="mouseEnter"}} {{action "stopScroll" on="mouseLeave"}}></span>
      <span class="toolbox-tabs-nav__slideArrow" {{action "scrollRightOne" on="click"}}>→</span>
      <span class="toolbox-tabs-nav__slideCounter">{{rightElements}}</span>
    </div>
</div>


<div class="tabs-panels p-2">

  {{yield
    (hash
      panel=(component "toolbox-tabs.tab-panel" register=(action "register") unregister=(action "unregister"))
    )
  }}

</div>